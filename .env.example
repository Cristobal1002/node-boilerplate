# Application
APP_NAME="Mordecai AI"
PORT=3000
NODE_ENV=development
API_VERSION=v1
VALIDATE_ENV=false

# Database
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432
DB_LOGGING=false

# Database Pool
PG_POOL_ACQUIRE=60000
PG_POOL_IDLE=10000
PG_POOL_MAX=10
PG_POOL_MIN=0

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Database Sync (use 'alter', 'force', or leave empty to disable)
# 'alter': Modifies existing tables to match models
# 'force': Drops and recreates all tables (⚠️ DANGER: deletes all data!)
# Leave empty: Disables sync (use migrations instead - recommended for production)
DB_SYNC_MODE=
